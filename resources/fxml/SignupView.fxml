<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="src.main.auth.SignupController"
      spacing="20" alignment="CENTER" style="-fx-padding: 40; -fx-background-color: #f9f9f9;">
    
    <!-- Cat Character Container (centered) -->
    <Pane fx:id="catPane" prefWidth="120" prefHeight="120"/>
    
    <!-- Title -->
    <Label text="Sign Up" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
    
    <!-- Username Field -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="Username:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="300"/>
    </VBox>
    
    <!-- Email Field -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="Email:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="emailField" promptText="Enter your email" prefWidth="300"/>
    </VBox>
    
    <!-- Password Field with Toggle -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="Password:" style="-fx-font-size: 14px;"/>
        <HBox spacing="5" alignment="CENTER">
            <StackPane>
                <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="300"/>
                <TextField fx:id="passwordVisibleField" promptText="Enter your password" prefWidth="300" visible="false"/>
            </StackPane>
            <Button fx:id="togglePasswordBtn" onAction="#togglePassword" style="-fx-background-color: transparent;">
                <Label fx:id="toggleLabel" text="Show"/>
            </Button>
        </HBox>
    </VBox>
    
    <!-- Signup Button -->
    <Button text="Sign Up" onAction="#handleSignup" prefWidth="300"
            style="-fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;"/>
    
    <!-- Login Switch -->
    <HBox alignment="CENTER" spacing="5">
        <Label text="Already have an account?" style="-fx-font-size: 12px;"/>
        <Hyperlink text="Login" onAction="#goToLogin" style="-fx-font-size: 12px;"/>
    </HBox>
    
</VBox>
