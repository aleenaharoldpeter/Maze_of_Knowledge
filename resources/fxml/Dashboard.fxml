<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="src.main.dashboard.DashboardController"
      spacing="30" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: #1e1e1e;">
      
    <!-- Main title -->
    <Label text="User Dashboard" 
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
    
    <!-- Details grid with centered columns -->
    <GridPane alignment="CENTER" hgap="25" vgap="20"
              style="-fx-background-color: #2d2d2d; -fx-padding: 25; -fx-background-radius: 15;">
              
        <!-- Set column constraints: right-aligned titles, centered details -->
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="150" />
            <ColumnConstraints halignment="CENTER" minWidth="200" />
        </columnConstraints>
        
        <!-- Row 0 -->
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px;"/>
        <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"
               style="-fx-text-fill: #dcdcdc; -fx-font-size: 16px;"/>
        
        <!-- Row 1 -->
        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px;"/>
        <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"
               style="-fx-text-fill: #dcdcdc; -fx-font-size: 16px;"/>
        
        <!-- Row 2 -->
        <Label text="Classic Games Played:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px;"/>
        <Label fx:id="classicGamesLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"
               style="-fx-text-fill: #dcdcdc; -fx-font-size: 16px;"/>
        
        <!-- Row 3 -->
        <Label text="Adventure Games Played:" GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px;"/>
        <Label fx:id="adventureGamesLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"
               style="-fx-text-fill: #dcdcdc; -fx-font-size: 16px;"/>
        
        <!-- Row 4 -->
        <Label text="Highest Score (Quiz):" GridPane.rowIndex="4" GridPane.columnIndex="0"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px;"/>
        <Label fx:id="highestScoreQuizLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"
               style="-fx-text-fill: #dcdcdc; -fx-font-size: 16px;"/>
        
        <!-- Row 5 -->
        <Label text="Highest Score (Matching Tiles):" GridPane.rowIndex="5" GridPane.columnIndex="0"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px;"/>
        <Label fx:id="highestScoreMatchingLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"
               style="-fx-text-fill: #dcdcdc; -fx-font-size: 16px;"/>
        
        <!-- Row 6 -->
        <Label text="Highest Score (Adventure):" GridPane.rowIndex="6" GridPane.columnIndex="0"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px;"/>
        <Label fx:id="highestScoreAdventureLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"
               style="-fx-text-fill: #dcdcdc; -fx-font-size: 16px;"/>
    </GridPane>
    
    <!-- Footer buttons -->
    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15;">
        <Button text="Back to Main Menu" onAction="#handleBackToMainMenu"
                style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 8 20;"/>
        <Button text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 8 20;"/>
        <Button text="Delete Account" onAction="#handleDeleteAccount"
                style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 8 20;"/>
    </HBox>
</VBox>
